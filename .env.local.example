# Convex Configuration
# Copy this file to .env.local and fill in your actual values

# Convex deployment URL (replace with your actual deployment URL)
# You'll get this after running `npx convex dev`
CONVEX_URL=https://your-deployment-id.convex.cloud

# Public Convex URL for client-side usage (same as CONVEX_URL)
NEXT_PUBLIC_CONVEX_URL=https://your-deployment-id.convex.cloud

# Optional: Email service configuration (for notifications)
# Uncomment and configure if you plan to send email notifications
# RESEND_API_KEY=your_resend_api_key_here
# SENDGRID_API_KEY=your_sendgrid_api_key_here

# Optional: Analytics and monitoring
# NEXT_PUBLIC_ANALYTICS_ID=your_analytics_id
# SENTRY_DSN=your_sentry_dsn

# Optional: Domain configuration for CORS (production)
# NEXT_PUBLIC_DOMAIN=https://your-production-domain.com

# Development environment flag
NODE_ENV=development
